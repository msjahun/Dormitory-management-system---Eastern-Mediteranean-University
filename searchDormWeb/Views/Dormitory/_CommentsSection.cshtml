@using Dau.Services.Domain.DormitoryDetailService
@model List<CommentSectionViewModel>

@{
    var modelList = Model;
}

@foreach (var item in modelList)
{
    <div class="card bg-secondary px-4 border-0 ">

        <div class="d-flex align-items-center">
            <a href="#" class="avatar rounded-circle shadow">
                <img alt="Image placeholder" src="@item.UserImageUrl">
            </a>
            <div class="avatar-content">
                <h6 class="mb-0">@item.UserFullName</h6>

                <dau-rating rating="@item.UserRatingNo"></dau-rating>

            </div>
        </div>


        <div class="media media-comment">

            <div class="media-body">
                <div class="media-text-bubble left-top">
                    <p class="text-sm ">@item.UserComment</p>

                </div>
            </div>
        </div>


    </div>
}
