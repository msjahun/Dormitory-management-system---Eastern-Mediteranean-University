<div class="pt-5 mt-5 delimiter-top" id="GoodToKnow">
    <!-- Resume timeline -->
    <h6>@Localizer["Good to know"]</h6>
    <span>@Localizer["Here's some interesting information about Alfam dormitories!"]</span>

    <div class="card">
        <div class="card-body bg-secondary">

            <div>
                <span><i class="fas fa-calendar"></i> @Localizer["Times we are open weekdays"] </span>

                <div class="progress-wrapper">

                    <h4 class="progress-tooltip" style="left: 75%;">6:00pm</h4>
                    <h4 class="progress-tooltip" style="left: 10%;">9:00am</h4>
                </div>


                <div class="progress ">

                    <div class="progress-bar " role="progressbar" style="width: 15%; background-color:#eaedf0;" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
                    <div class="progress-bar bg-success" role="progressbar" style="width: 60%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                    <div class="progress-bar " role="progressbar" style="width: 20%;  background-color:#eaedf0;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>

            <div class="py-3">
                <span><i class="fas fa-calendar "></i> @Localizer["Times we are open weekends"] </span>

                <div class="progress-wrapper">

                    <h4 class="progress-tooltip" style="left: 45%;">1:00pm</h4>
                    <h4 class="progress-tooltip" style="left: 10%;">9:00am</h4>
                </div>


                <div class="progress ">

                    <div class="progress-bar " role="progressbar" style="width: 15%; background-color:#eaedf0;" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
                    <div class="progress-bar bg-success" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                    <div class="progress-bar " role="progressbar" style="width: 20%;  background-color:#eaedf0;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>

            <div>
                <span><i class="fas fa-paw "></i> @Localizer["Pets"] </span>
                <div class="d-inline ml-5">
                    <span>@Localizer["Pets are not allowed"]</span>
                </div>
            </div>

        </div>
    </div>


</div>
