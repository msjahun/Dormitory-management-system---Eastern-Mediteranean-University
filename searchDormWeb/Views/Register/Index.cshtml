@using searchDormWeb.Models
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutUserNew.cshtml";
}

<section class="slice slice-xl delimiter-bottom">

    <div class="container ">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                <div class="card shadow zindex-100">
                    <div class="card-body px-md-5 py-5">
                        <div class="text-center mb-5">
                            <h6 class="h3">@Localizer["Create your free account"]</h6>
                            <p class="text-muted mb-0">@Localizer["Used by thousands of EMU students to book for dormitories"]</p>
                        </div>
                        <span class="clearfix"></span>




                        <div style="color:red;" asp-validation-summary="All"></div>

                        <form role="form" asp-controller="Register" asp-action="Index" method="post">
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Email"></label>
                                <div class="input-group input-group-transparent">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="email" class="form-control" asp-for="Email">
                                </div>

                                <span style="color:red;" asp-validation-for="Password"></span>
                            </div>


                            <div class="form-group mb-4">
                                <label class="form-control-label" asp-for="Password"></label>
                                <div class="input-group input-group-transparent">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    </div>
                                    <input type="password" class="form-control" id="input-password" asp-for="Password">
                                    <div class="input-group-append" id="unmask_password">
                                        <span class="input-group-text">
                                            <i class="fas fa-eye"></i>
                                        </span>
                                    </div>
                                </div>
                                <span style="color:red;" asp-validation-for="Password"></span>
                            </div>


                            <div class="form-group">
                                <label class="form-control-label" asp-for="ConfirmPassword"></label>
                                <div class="input-group input-group-transparent">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    </div>
                                    <input type="password" class="form-control" id="input-password-confirm" asp-for="ConfirmPassword">
                                </div>
                                <span style="color:red;" asp-validation-for="ConfirmPassword"></span>

                            </div>


                            <div class="my-4">
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input" id="customCheckRegister" type="checkbox">
                                    <label class="custom-control-label" for="customCheckRegister">
                                        <span>@Localizer["I agree to the"] <a href="#">@Localizer["Terms and Conditions"]</a> @Localizer["and"] <a href="#">@Localizer["Privacy Policy</a>."]</span>
                                    </label>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-sm-7">
                                    <button type="submit" class="btn btn-primary mb-3 mb-sm-0">@Localizer["Create account"]</button>
                                </div>
                                <div class="col-sm-5 text-sm-right">
                                    <span class="small d-sm-block d-md-inline">@Localizer["Already registered?"]</span>
                                    <a asp-controller="Login" class="small font-weight-bold">@Localizer["Sign in"]</a>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>



            </div>
        </div>
    </div>
</section>

@section styles{



}

@section scripts
    {



    <script>

    $("#unmask_password").click(function () {

        if ($("#input-password").attr('type') == 'password') {
            $("#input-password").attr('type', 'text');
            console.log("password");
        }

        else {
            $("#input-password").attr('type', 'password');
            console.log("not password");

        }


        return false;

    });
    </script>

}