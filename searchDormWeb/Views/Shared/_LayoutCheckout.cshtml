                                        <span class="btn-inner--text d-none d-md-inline-block">Empty Cart</span>
                                    </a>
                                    <a asp-controller="debug" asp-action="BookingCheckoutCustomer" class="btn btn-secondary btn-icon @(currentAction=="BookingCheckoutCustomer"? "active" : "")">
