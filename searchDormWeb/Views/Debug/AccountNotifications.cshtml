
@{
    ViewData["Title"] = "AccountNotifications";
    Layout = "~/Views/Shared/_LayoutMyAccount.cshtml";
}

<div class="col-lg-9">
    <!-- Notification -->

    <div class="page-inner-header mb-4">
        <h5 class="mb-1">Shop notifications</h5>

        <p class="text-muted mb-0">Be notified only about the things that matter to you.</p>

    </div>


    <div class="list-group">
        <div class="list-group-item d-flex w-100 justify-content-between">
            <div>
                <h6 class="mb-1">A product from wishlist is on sale</h6>
                <small>You will receive an alert when one of your favorite products has a discount price.</small>
            </div>
            <div>
                <label class="toggle-switch" for="shop-notification-1">
                    <input type="checkbox" name="shop-notifications-1" id="shop-notification-1" checked>
                    <span class="toggle-switch-slider rounded-circle"></span>
                </label>
            </div>
        </div>
        <div class="list-group-item d-flex w-100 justify-content-between">
            <div>
                <h6 class="mb-1">A new product is released</h6>
