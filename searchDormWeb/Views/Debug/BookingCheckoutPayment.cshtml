
@{
    ViewData["Title"] = "BookingCheckoutPayment";

    ViewData["Header"] = "Checkout";
    ViewData["SubDescription"] = "Payment information";


    Layout = "~/Views/Shared/_LayoutCheckout.cshtml";
}

<section class="slice">
    <div class="container">
        <div class="row row-grid">
            <div class="col-lg-8">
                <form>
                    <div>

                        <div class="page-inner-header mb-4">
                            <h5 class="mb-1">Confirm payment before 22-Nov-2018 </h5>

                            <p class="text-muted mb-0">You have 5 working days before your bookings gets cancelled without payment confirmation </p>

                        </div>

                        <div class="card mt-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-8">
                                        <div class="custom-control custom-radio mb-3">
                                            <input type="radio" name="radio-payment" class="custom-control-input" id="radio-payment-paypal">
                                            <label class="custom-control-label h6 lh-160" for="radio-payment-paypal">Upload payment receipt</label>
                                        </div>
                                        <p class="text-muted text-sm mt-2">Pay your order using the most known and secure platform for online money transfers. You will be redirected to PayPal to finish complete your purchase.</p>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="card mt-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-8">
                                        <div class="custom-control custom-radio mb-3">
                                            <input type="radio" name="radio-payment2" class="custom-control-input" id="radio-payment-dormitory">
                                            <label class="custom-control-label h6 lh-160" for="radio-payment-paypal">Pay Dormitory directly</label>
                                        </div>
                                        <p class="text-muted text-sm mt-2">Pay your order using the most known and secure platform for online money transfers. You will be redirected to PayPal to finish complete your purchase.</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-5 text-right">
                        <button type="button" class="btn btn-link text-sm text-dark font-weight-bold">Return to Home page</button>
                        <button type="button" class="btn btn-sm btn-primary">Complete booking order</button>
                    </div>
                </form>
            </div>
            <div class="col-lg-4">

                <div data-toggle="sticky" data-sticky-offset="100">

                    <div class="card" id="card-summary">
                        <div class="card-header py-3">
                            <div class="row align-items-center">
                                <div class="col-6">
                                    <span class="h6">Summary</span>
                                </div>
                                <div class="col-6 text-right">
                                    <span class="badge badge-md badge-pill badge-info">1 selected Room</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-8">
                                    <div class="media align-items-center">
                                        <img alt="Image placeholder" class="mr-2" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTuzxmbcw2jxGlHQ_ZuICaAowpUUjFoOYTJH9oGmsQmz3WG4IpkSw" style="width: 42px;">
                                        <div class="media-body">
                                            <div class="text-limit lh-100">
                                                <small class="text-dark font-weight-bold mb-0">Alfam Dormitories</small>
                                            </div>
                                            <small class="text-muted">2 semsters</small><br />
                                            <small class="text-muted">Single room</small><br />
                                            <small class="text-muted">A. block</small><br />
                                            <small class="text-muted">42.3 m2</small><br />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4 text-right lh-100">
                                    <small class="text-dark">$1,800.00</small>
                                </div>
                            </div>

                            <!-- Subtotal -->
                            <div class="row mt-3 pt-3 border-top">
                                <div class="col-8 text-right">
                                    <small class="text-dark font-weight-bold">Subtotal:</small>
                                </div>
                                <div class="col-4 text-right">
                                    <span class="text-sm font-weight-bold">$330.50</span>
                                </div>
                            </div>
                            <!-- Booking fee -->
                            <div class="row mt-3 pt-3 border-top">
                                <div class="col-8 text-right">
                                    <div class="media align-items-center">

                                        <div class="media-body">
                                            <div class="text-limit lh-100">
                                                <small class="text-dark font-weight-bold mb-0">Booking fee:</small>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-4 text-right">
                                    <span class="text-sm font-weight-bold">$25.00</span>
                                </div>
                            </div>
                            <!-- Tax-->
                            <div class="row mt-3 pt-3 border-top">
                                <div class="col-8 text-right">
                                    <div class="media align-items-center">

                                        <div class="media-body">
                                            <div class="text-limit lh-100">
                                                <small class="text-dark font-weight-bold mb-0">Tax:</small>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-4 text-right">
                                    <span class="text-sm font-weight-bold">$25.00</span>
                                </div>
                            </div>
                            <!-- Subtotal -->
                            <div class="row mt-3 pt-3 border-top">
                                <div class="col-8 text-right">
                                    <small class="text-uppercase text-dark font-weight-bold">Total:</small>
                                </div>
                                <div class="col-4 text-right">
                                    <span class="text-sm text-dark font-weight-bold">$355.50</span>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>

