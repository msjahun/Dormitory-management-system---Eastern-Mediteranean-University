@using searchDormWeb.Areas.Admin.Models.System
@model MaintenanceVm
@{
    ViewData["Title"] = "_Maintenance";
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small>Optional description</small>
        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">


                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="">
                <div class=""></div>
                <!-- /.box-header -->
                <!-- form start -->

                <div class="row">

                    <div class="col-md-4">
                        <div class="box box-warning">
                            <div class="box-header with-border">
                                <h3 class="box-title">Deleting guest users</h3>


                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <div class="form-group">
                                    <dau-label asp-for="StartDate"></dau-label>
                                    <dau-date asp-for="StartDate"></dau-date>
                                    <span asp-validation-for="StartDate"></span>
                                </div>


                                <div class="form-group">
                                    <dau-label asp-for="EndDate"></dau-label>
                                    <dau-date asp-for="EndDate"></dau-date>
                                    <span asp-validation-for="EndDate"></span>
                                </div>


                                <div class="form-group">
                                    <dau-label asp-for="OnlyWithoutWishList"></dau-label>
                                    <div class="col-sm-8"><input type="checkbox" asp-for="OnlyWithoutWishList"></div>
                                    <span asp-validation-for="OnlyWithoutWishList"></span>
                                </div>

                                <div class="form-group">
                                    <div class=" col-sm-8">
                                        <button type="submit" class="btn btn-danger "> <i class="fa fa-trash"></i> Delete</button>
                                    </div>
                                </div>

                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>

                    <div class="col-md-4">
                        <div class="box box-warning">
                            <div class="box-header with-border">
                                <h3 class="box-title">Deleting abandoned wishlists</h3>


                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">

                                <div class="form-group">
                                    <dau-label asp-for="CreatedBefore"></dau-label>
                                    <dau-date asp-for="CreatedBefore"></dau-date>
                                    <span asp-validation-for="CreatedBefore"></span>
                                </div>

                                <div class="form-group">
                                    <div class=" col-sm-10">
                                        <button type="submit" class="btn btn-danger "> <i class="fa fa-trash"></i> Delete</button>
                                    </div>
                                </div>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>

                    <div class="col-md-4">
                        <div class="box box-warning">
                            <div class="box-header with-border">
                                <h3 class="box-title">Deleting old exported files</h3>


                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">

                                <div class="form-group">
                                    <dau-label asp-for="StartDate"></dau-label>
                                    <dau-date asp-for="StartDate"></dau-date>
                                    <span asp-validation-for="StartDate"></span>
                                </div>

                                <div class="form-group">
                                    <dau-label asp-for="EndDate"></dau-label>
                                    <dau-date asp-for="EndDate"></dau-date>
                                    <span asp-validation-for="EndDate"></span>
                                </div>

                                <div class="form-group">
                                    <div class=" col-sm-10">
                                        <button type="submit" class="btn btn-danger "> <i class="fa fa-trash"></i> Delete</button>
                                    </div>
                                </div>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>


                </div>


            </div>



            <div class="box">

                <!-- /.box-header -->
                <div class="box-body">
                    <div class="box-header">
                        <h3 class="box-title">Database backups</h3>
                    </div>

                    <div class="overflow">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>File name</th>
                                    <th>File size</th>
                                    <th>Download</th>
                                    <th>Restore</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody></tbody>

                        </table>
                    </div>

                    <button type="submit" class="btn btn-primary"> <i class="fa fa-hdd-o"></i> Backup Now</button>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>


    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

