@using searchDormWeb.Areas.Admin.Models.System
@model LogVm
@{
    ViewData["Title"] = "Log";
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title

        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">

                    <a  class="btn btn-danger "> <i class="fa fa-trash"></i> Delete selected</a>
                    <button id="ClearLogBtn" class="btn btn-primary "> <i class="fa fa-trash"></i> Clear log</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
    | Your Page Content Here |
    -------------------------->
        <div id="alertACL">

        </div>
        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-solid">
                <div class="box-header"></div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <dau-label asp-for="CreatedFrom"></dau-label>
                            <dau-date asp-for="CreatedFrom"></dau-date>
                            <span asp-validation-for="CreatedFrom"></span>
                        </div>


                        <div class="form-group">
                            <dau-label asp-for="CreatedTo"></dau-label>
                            <dau-date asp-for="CreatedTo"></dau-date>
                            <span asp-validation-for="CreatedTo"></span>
                        </div>


                        <div class="form-group">
                            <dau-label asp-for="Message"></dau-label>
                            <dau-input type="text" asp-for="Message"></dau-input>
                            <span asp-validation-for="Message"></span>
                        </div>


                        <div class="form-group">
                            <dau-label asp-for="LogLevel"></dau-label>
                            <dau-select asp-for="LogLevel"></dau-select>
                            <span asp-validation-for="LogLevel"></span>
                        </div>



                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary btn-lg "> <i class="fa fa-search"></i> Search</button>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->

                </form>
            </div>



            <div class="box box-solid">

                <!-- /.box-header -->
                <div class="box-body">

                    <div class="overflow">
                        <table id="LogTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th><input type="checkbox"></th>
                                    <th>Id</th>
                                    <th>Event Id</th>
                                    <th>Log level</th>
                                    <th>Short message</th>
                                    <th>Created on</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody></tbody>

                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>


    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

