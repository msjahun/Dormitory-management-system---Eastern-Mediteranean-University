@using static Dau.Services.Email.MessageQueueService

@model MessageQueueEdit
@{
    var item = Model;
    ViewData["Title"] = Localizer["Edit Message Queue Id- {0}", item.Id];
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";


}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small><a asp-action="MessageQueues" asp-controller="System"><i class="fa fa-arrow-circle-left"></i> @Localizer["back to Message Queue list"]</a></small>
        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">

                    <button type="submit" form="addForm" onclick="resolveButton('Requeue')" class="btn btn-success "> <i class="fa fa-files-o"></i> @Localizer["Requeue"]</button>
                    <button type="submit" form="addForm" onclick="resolveButton('SaveClose')" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> @Localizer["Save"]</button>
                    <button type="submit" form="addForm" onclick="resolveButton('SaveContinue')" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> @Localizer["Save and Continue Edit"]</button>
                    <button type="submit" form="addForm" onclick="resolveButton('Delete')" class="btn btn-danger "> <i class="fa fa-trash-o"></i> @Localizer["Delete"]</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-primary">
                <div class="box-header"></div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal"  method="post" id="editForm" >
                    <div class="box-body">
                        <div style="color:red;" asp-validation-summary="All"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <dau-label asp-for="Id"></dau-label>
                            <div class="col-sm-9">
                                <p>@item.Id</p>
                            </div>

                        </div>

                        <div class="form-group">
                            <dau-label asp-for="MessagePriority"></dau-label>
                            <div class="col-sm-8">
                                <p>High</p>
                            </div>

                        </div>



                        <div class="form-group">
                            <dau-label asp-for="From"></dau-label>
                            <div class="col-sm-8">
                                <p>@item.From</p>
                            </div>



                        </div>

                        <div class="form-group">
                            <dau-label asp-for="FromName"></dau-label>
                            <div class="col-sm-8">
                                <p>@item.FromName</p>
                            </div>



                        </div>

                


                        <div class="form-group">
                            <dau-label asp-for="To"></dau-label>
                            <dau-input asp-for="To" type="email"></dau-input>
                            <span asp-validation-for="To"></span>
                        </div>


                        <div class="form-group">
                            <dau-label asp-for="ToName"></dau-label>
                            <dau-input asp-for="ToName" type="text"></dau-input>
                            <span asp-validation-for="ToName"></span>

                        </div>


                        @*<div class="form-group">
                            <dau-label asp-for="CC"></dau-label>
                            <dau-input asp-for="CC" type="email"></dau-input>
                            <span asp-validation-for="CC"></span>

                        </div>



                        <div class="form-group">
                            <dau-label asp-for="BCC"></dau-label>
                            <dau-input asp-for="BCC" type="email"></dau-input>
                            <span asp-validation-for="BCC"></span>

                        </div>*@



                        <div class="form-group">

                            <dau-label asp-for="Subject"></dau-label>
                            <dau-input asp-for="Subject" type="text"></dau-input>
                            <span asp-validation-for="Subject"></span>

                        </div>


                        <div class="form-group">

                            <dau-label asp-for="Body"></dau-label>
                            <dau-editor asp-for="Body"></dau-editor>
                            <span asp-validation-for="Body"></span>

                        </div>


                        <div class="form-group">
                            <dau-label asp-for="CreatedOn"></dau-label>
                            <div class="col-sm-8">
                                <p>@item.CreatedOn</p>
                            </div>

                        </div>



                        <div class="form-group">
                            <dau-label asp-for="SendAttempts"></dau-label>
                            <div class="col-sm-8">
                                <p>@item.SendAttempts</p>
                            </div>

                        </div>






                        <div class="form-group">
                            <dau-label asp-for="SentOn"></dau-label>
                            <div class="col-sm-8">
                                <p>@item.SentOn</p>
                            </div>



                        </div>


                        <div class="form-group">
                            <dau-label asp-for="EmailAccount"></dau-label>
                            <div class="col-sm-8">
                                <p>@item.EmailAccount</p>
                            </div>

                        </div>



                    </div>
                    <!-- /.box-body -->

                </form>
            </div>


        </div>


    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

