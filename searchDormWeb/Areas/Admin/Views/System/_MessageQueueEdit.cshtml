    <!-- page script -->

        <script>

             function resolveButton(button) {
                       switch (button) {
                       
                           case "Requeue": {
                          
                               $('#editForm').attr('action', "/admin/System/RequeueMessage").submit();
                           }; break;


                           case "SaveClose": {
                                   alert("SaveClose");
                                 
                               }; break;


                           case "SaveContinue": {
                               
                     
                               $('#editForm').attr('action', "/admin/System/MessageQueueEdit").submit();
                            
                               
                               }; break;


                          


                           case "Delete": {
                                   console.log("Delete Message queue");
                                   var r = confirm("@Localizer["Are you sure you want to delete message?"]");
                                   if (r == true) {
                                       $('#editForm').attr('action', "/admin/System/DeleteMessageFromQueue").submit();
                                   }

                               }; break;
             }
         }

    $(function () {
    // Replace the <textarea id="editor1"> with a CKEditor
