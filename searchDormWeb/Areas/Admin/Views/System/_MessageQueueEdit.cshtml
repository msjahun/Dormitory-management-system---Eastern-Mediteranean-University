@using searchDormWeb.Areas.Admin.Models.System
@model MessageQueueEdit
@{
    ViewData["Title"] = "Edit Message Queue";
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small><a asp-action="MessageQueues" asp-controller="System"><i class="fa fa-arrow-circle-left"></i> back to Message Queue list</a></small>
        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">

                    <button type="submit" form="addForm" class="btn btn-success "> <i class="fa fa-files-o"></i> Requeue</button>
                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> Save</button>
                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> Save and Continue Edit</button>
                    <button type="submit" form="addForm" class="btn btn-danger "> <i class="fa fa-trash-o"></i> Delete</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-primary">
                <div class="box-header"></div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                           <dau-label asp-for="MessagePriority"></dau-label>
                            <div class="col-sm-8">
                                <p>High</p>
                            </div>

                        </div>

                        <div class="form-group">
                             <dau-label asp-for="From"></dau-label>
                            <dau-input asp-for="From" type="email"></dau-input>
                            <span asp-validation-for="From"></span>
                        </div>

                        <div class="form-group">
                            <dau-label asp-for="FromName"></dau-label>
                            <dau-input asp-for="FromName" type="text"></dau-input>
                            <span asp-validation-for="FromName"></span>

                        </div>


                        <div class="form-group">
                            <dau-label asp-for="To"></dau-label>
                            <dau-input asp-for="To" type="email"></dau-input>
                            <span asp-validation-for="To"></span>
                        </div>


                        <div class="form-group">
                            <dau-label asp-for="ToName"></dau-label>
                            <dau-input asp-for="ToName" type="text"></dau-input>
                            <span asp-validation-for="ToName"></span>

                        </div>


                        <div class="form-group">
                            <dau-label asp-for="CC"></dau-label>
                            <dau-input asp-for="CC" type="email"></dau-input>
                            <span asp-validation-for="CC"></span>

                        </div>



                        <div class="form-group">
                            <dau-label asp-for="BCC"></dau-label>
                            <dau-input asp-for="BCC" type="email"></dau-input>
                            <span asp-validation-for="BCC"></span>

                        </div>



                        <div class="form-group">
                            
                            <dau-label asp-for="Subject"></dau-label>
                            <dau-input asp-for="Subject" type="text"></dau-input>
                            <span asp-validation-for="Subject"></span>

                        </div>


                        <div class="form-group">
                           
                            <dau-label asp-for="Body"></dau-label>
                            <dau-textarea asp-for="Body" ></dau-textarea>
                            <span asp-validation-for="Body"></span>

                        </div>


                        <div class="form-group">
                             <dau-label asp-for="CreatedOn"></dau-label>
                            <div class="col-sm-8">
                                <p>8/28/2018 9:46:12PM</p>
                            </div>

                        </div>





                        <div class="form-group">
                      
                            <dau-label asp-for="SendImmediately"></dau-label>
                            <div class="col-sm-8">
                                <input asp-for="SendImmediately" type="checkbox">
                            </div>
                            <span asp-validation-for="From"></span>

                        </div>


                        <div class="form-group">
                            <dau-label asp-for="SendAttempts"></dau-label>
                            <dau-input type="number" asp-for="SendAttempts"></dau-input>
                            <span asp-validation-for="SendAttempts"></span>

                        </div>


                        <div class="form-group">
                            <dau-label asp-for="SentOn"></dau-label>
                            <div class="col-sm-8">
                                <p>Not sent yet</p>
                            </div>

                            

                        </div>


                        <div class="form-group">
                            <dau-label asp-for="EmailAccount"></dau-label>
                            <div class="col-sm-8">
                                <p>noreply@searchdorm.emu.edu.tr(searchdorm noreply)</p>
                            </div>

                        </div>



                    </div>
                    <!-- /.box-body -->

                </form>
            </div>


        </div>


    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

