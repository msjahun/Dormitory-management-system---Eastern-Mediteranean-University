                                        <span asp-validation-for="LastName"></span>
                                    </div>


                                    <div class="form-group">
                                        <dau-label asp-for="Email"></dau-label>
                                        <dau-input asp-for="Email" type="email"></dau-input>
                                        <span asp-validation-for="Email"></span>
                                    </div>



                                    <div class="form-group">
                                        <dau-label asp-for="Company"></dau-label>
                                        <dau-input asp-for="Company" type="text"></dau-input>
                                        <span asp-validation-for="Company"></span>

                                    </div>

                                    <div class="form-group">
                                        <dau-label asp-for="Country"></dau-label>
                                        <dau-select asp-for="Country" ></dau-select>
                                        <span asp-validation-for="Country"></span>
                                    </div>


                                    <div class="form-group">
                                        <dau-label asp-for="StateProvince"></dau-label>
                                        <dau-select asp-for="StateProvince" ></dau-select>
                                        <span asp-validation-for="StateProvince"></span>

                                    </div>

                                    <div class="form-group">
                                       <dau-label asp-for="City"></dau-label>
                                        <dau-input asp-for="City" type="text"></dau-input>
                                        <span asp-validation-for="City"></span>
                                    </div>

                                    <div class="form-group">
                                       <dau-label asp-for="Address1"></dau-label>
                                        <dau-input asp-for="Address1" type="text"></dau-input>
                                        <span asp-validation-for="Address1"></span>
                                    </div>


                                    <div class="form-group">
