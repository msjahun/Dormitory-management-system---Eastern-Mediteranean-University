        <h1>
            @ViewBag.Title
         
        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">

                    <a asp-action="CampaignAdd" asp-controller="Promotions" asp-area="Admin" class="btn btn-primary "> <i class="fa fa-plus-square"></i> Add new</a>
                </div>
