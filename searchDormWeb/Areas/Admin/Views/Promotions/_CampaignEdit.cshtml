@using searchDormWeb.Areas.Admin.Models.Promotions
@model CampaignEdit
@{
    ViewData["Title"] = Localizer["Edit Campaign"];
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small><a asp-action="Campaigns" asp-controller="Promotions"><i class="fa fa-arrow-circle-left"></i> @Localizer["back to Campaigns list"]</a></small>
        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">

                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> @Localizer["Save"]</button>
                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> @Localizer["Save and Continue Edit"]</button>
                    <button type="submit" form="addForm" class="btn btn-danger "> <i class="fa fa-trash-o"></i> @Localizer["Delete"]</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box ">
                <div class="box-header"></div>
                <!-- /.box-header -->
                <!-- form start -->


                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="callout callout-default">


                            <p>@Localizer["Make sure you've tested the compaign before sending it to mulitple customers. Save your compaign by clicking \"save\" button."]</p>
                        </div>

                        <div class="form-group">
                           <dau-label asp-for="EmailAccount"></dau-label>
                            <dau-select asp-for="EmailAccount" ></dau-select>
                            <span asp-validation-for="EmailAccount"></span>
                        </div>

                        <div class="form-group">
                           
                            <dau-label asp-for="SendTestEmailTo"></dau-label>
                            <dau-inputaddon text="Send email" addon-type="button" asp-for="SendTestEmailTo" type="email"></dau-inputaddon>
                            <span asp-validation-for="SendTestEmailTo"></span>
                        </div>


                     

                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-3 control-label"> </label>

                            <div class="col-sm-8">
                                <button type="submit" form="addForm" class="btn btn-primary "> @Localizer["Send mass email"]</button>
                            </div>

                        </div>

                    </div>
                    <!-- /.box-body -->
            


            </form>

                </div>
            <div class="box ">
                <div class="box-header"></div>
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                           <dau-label asp-for="AllowedTokens"></dau-label>
                            <div class="col-sm-8">
                                <a>Hide</a>
                            </div>

                            <div class="col-sm-8">
                                <p>%Store.Name, %Store.URL, %Store.Email,%Store.Name, %Store.URL, %Store.Email,%Store.Name, %Store.URL, %Store.Email,%Store.Name, %Store.URL, %Store.Email,%Store.Name, %Store.URL, %Store.Email</p>
                            </div>

                        </div>


                        <div class="form-group">

                            <dau-label asp-for="Name"></dau-label>
                            <dau-input asp-for="Name" type="text"></dau-input>
                            <span asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group">

                            <dau-label asp-for="Subject"></dau-label>
                            <dau-input asp-for="Subject" type="text"></dau-input>
                            <span asp-validation-for="Subject"></span>
                        </div>


                        <div class="form-group">

                            <dau-label asp-for="Body"> </dau-label>
                            <dau-textarea asp-for="Body"></dau-textarea>
                            <span asp-validation-for="Body"></span>
                        </div>


                        <div class="form-group">

                            <dau-label asp-for="PlannedDateOfSending"></dau-label>
                            <dau-date asp-for="PlannedDateOfSending"></dau-date>
                            <span asp-validation-for="PlannedDateOfSending"></span>
                        </div>


                        <div class="form-group">

                            <dau-label asp-for="LimitedToCustomerRole"></dau-label>
                            <dau-select multiple-select="true" asp-for="LimitedToCustomerRole"></dau-select>
                            <span asp-validation-for="LimitedToCustomerRole"></span>
                        </div>






                    </div>
                    <!-- /.box-body -->

                </form>
            </div>


        </div>


    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

@section styles {


    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/Ionicons/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")dist/css/AdminLTE.min.css">
