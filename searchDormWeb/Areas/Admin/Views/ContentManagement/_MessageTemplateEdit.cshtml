@using searchDormWeb.Areas.Admin.Models.ContentManagement
@model MessageTemplateEdit
@{
    ViewData["Title"] = "Edit Message Template";
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small><a asp-action="MessageTemplates" asp-controller="ContentManagement"><i class="fa fa-arrow-circle-left"></i> back to message templates list</a></small>
        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">

                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> Save</button>
                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> Save and Continue Edit</button>
                    <button type="submit" form="addForm" class="btn btn-success "> <i class="fa fa-clone"></i> Copy template</button>
                    <button type="submit" form="addForm" class="btn btn-danger "> <i class="fa fa-trash-o"></i> Delete</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box ">
                <div class="box-header">
                    <p>
                        This message template is used when a new blog comment to the certain blog post is created.
                        The message is received by a dormitory manager. You can set this option by ticking the checkbox
                        <bold>Notify about new blog comments</bold> In Configuration - Settings - Blog settings
                    </p>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <dau-label asp-for="AllowedTokens"></dau-label>
                            <div class="col-sm-8">
                                <a>Hide</a>
                            </div>

                            <div class="col-sm-8">
                                <p>%Store.Name, %Store.URL, %Store.Email,%Store.Name, %Store.URL, %Store.Email,%Store.Name, %Store.URL, %Store.Email,%Store.Name, %Store.URL, %Store.Email,%Store.Name, %Store.URL, %Store.Email</p>
                            </div>

                        </div>

                        <div class="form-group">
                            <dau-label asp-for="Name" ></dau-label>
                            <div class="col-sm-8">
                                <p>blog.blogComment</p>
                            </div>

                        </div>

                        <dau-tabs id="ContentLanguageTab">
                            <dau-tab id="tab1" name="Standard" active="true">
                                <div class="form-group">
                                   
                                    <dau-label asp-for="localizedMessageTemplateContents[0].Subject"></dau-label>
                                    <dau-input asp-for="localizedMessageTemplateContents[0].Subject" type="text"></dau-input>
                                    <span asp-validation-for="localizedMessageTemplateContents[0].Subject"></span>
                                </div>


                                <div class="form-group">
                                   
                                    <dau-label asp-for="localizedMessageTemplateContents[0].Body"></dau-label>
                                    <dau-textarea asp-for="localizedMessageTemplateContents[0].Body" ></dau-textarea>
                                    <span asp-validation-for="localizedMessageTemplateContents[0].Body"></span>
                                </div>

                                <div class="form-group">
                                  
                                    <dau-label asp-for="localizedMessageTemplateContents[0].BCC"></dau-label>
                                    <dau-input asp-for="localizedMessageTemplateContents[0].BCC" type="text"></dau-input>
                                    <span asp-validation-for="localizedMessageTemplateContents[0].BCC"></span>

                                </div>




                                <div class="form-group">
                                    
                                    <dau-label asp-for="localizedMessageTemplateContents[0].EmailAccount"></dau-label>
                                    <dau-select asp-for="localizedMessageTemplateContents[0].EmailAccount" ></dau-select>
                                    <span asp-validation-for="localizedMessageTemplateContents[0].EmailAccount"></span>

                                </div>


                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-3 control-label"></label>
                                
                                    <div class="col-sm-8">
                                        <button class="btn btn-primary">Test template</button>
                                    </div>

                                </div>
                            </dau-tab>
                            <dau-tab id="tab2" name="English" flag="@Url.Content("~/Content/")dist/img/us.png">
                                <div class="form-group">

                                    <dau-label asp-for="localizedMessageTemplateContents[1].Subject"></dau-label>
                                    <dau-input asp-for="localizedMessageTemplateContents[1].Subject" type="text"></dau-input>
                                    <span asp-validation-for="localizedMessageTemplateContents[1].Subject"></span>
                                </div>


                                <div class="form-group">

                                    <dau-label asp-for="localizedMessageTemplateContents[1].Body"></dau-label>
                                    <dau-textarea asp-for="localizedMessageTemplateContents[1].Body"></dau-textarea>
                                    <span asp-validation-for="localizedMessageTemplateContents[1].Body"></span>
                                </div>

                                <div class="form-group">

                                    <dau-label asp-for="localizedMessageTemplateContents[1].BCC"></dau-label>
                                    <dau-input asp-for="localizedMessageTemplateContents[1].BCC" type="text"></dau-input>
                                    <span asp-validation-for="localizedMessageTemplateContents[1].BCC"></span>

                                </div>




                                <div class="form-group">

                                    <dau-label asp-for="localizedMessageTemplateContents[1].EmailAccount"></dau-label>
                                    <dau-select asp-for="localizedMessageTemplateContents[1].EmailAccount"></dau-select>
                                    <span asp-validation-for="localizedMessageTemplateContents[1].EmailAccount"></span>

                                </div>


                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-3 control-label"></label>

                                    <div class="col-sm-8">
                                        <button class="btn btn-primary">Test template</button>
                                    </div>

                                </div>
                            </dau-tab>
                            <dau-tab id="tab3" name="Turkish" flag="@Url.Content("~/Content/")dist/img/tr.png">
                                <div class="form-group">

                                    <dau-label asp-for="localizedMessageTemplateContents[2].Subject"></dau-label>
                                    <dau-input asp-for="localizedMessageTemplateContents[2].Subject" type="text"></dau-input>
                                    <span asp-validation-for="localizedMessageTemplateContents[2].Subject"></span>
                                </div>


                                <div class="form-group">

                                    <dau-label asp-for="localizedMessageTemplateContents[2].Body"></dau-label>
                                    <dau-textarea asp-for="localizedMessageTemplateContents[2].Body"></dau-textarea>
                                    <span asp-validation-for="localizedMessageTemplateContents[2].Body"></span>
                                </div>

                                <div class="form-group">

                                    <dau-label asp-for="localizedMessageTemplateContents[2].BCC"></dau-label>
                                    <dau-input asp-for="localizedMessageTemplateContents[2].BCC" type="text"></dau-input>
                                    <span asp-validation-for="localizedMessageTemplateContents[2].BCC"></span>

                                </div>




                                <div class="form-group">

                                    <dau-label asp-for="localizedMessageTemplateContents[2].EmailAccount"></dau-label>
                                    <dau-select asp-for="localizedMessageTemplateContents[2].EmailAccount"></dau-select>
                                    <span asp-validation-for="localizedMessageTemplateContents[2].EmailAccount"></span>

                                </div>


                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-3 control-label"></label>

                                    <div class="col-sm-8">
                                        <button class="btn btn-primary">Test template</button>
                                    </div>

                                </div>
                            </dau-tab>
                        </dau-tabs>




      




                        <div class="form-group">
                            <dau-label asp-for="isActive"></dau-label>
                            <div class="col-sm-8">
                                <input asp-for="isActive" type="checkbox">
                            </div>
                            <span asp-validation-for="isActive"></span>

                        </div>


                        <div class="form-group">
                          
                            <dau-label asp-for="SendImmediately"></dau-label>
                            <div class="col-sm-8">
                                <input asp-for="SendImmediately" type="checkbox">
                            </div>
                            <span asp-validation-for="SendImmediately"></span>
                        </div>


                        <div class="form-group">
                          
                            <dau-label asp-for="AttachedStaticFile"></dau-label>
                            <div class="col-sm-8">
                                <input asp-for="AttachedStaticFile" type="checkbox">
                            </div>
                            <span asp-validation-for="AttachedStaticFile"></span>
                            <div class="col-sm-8">
                                <button class="btn btn-success">Upload file</button>
                            </div>

                        </div>

                        <div class="form-group">
                            <dau-label asp-for="LimitedToDormitories"></dau-label>
                            <dau-select multiple-select="true" asp-for="LimitedToDormitories" ></dau-select>
                            <span asp-validation-for="LimitedToDormitories"></span>

                        </div>


                    </div>
                    <!-- /.box-body -->

                </form>
            </div>


        </div>


    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

@section styles {


    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/Ionicons/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")dist/css/skins/_all-skins.min.css">
}


@section scripts
    {

    <script src="@Url.Content("~/Content/")bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="@Url.Content("~/Content/")bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- AdminLTE App -->
    <script src="@Url.Content("~/Content/")dist/js/adminlte.min.js"></script>
    <script src="@Url.Content("~/Content/")bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="@Url.Content("~/Content/")bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="@Url.Content("~/Content/")bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="@Url.Content("~/Content/")bower_components/fastclick/lib/fastclick.js"></script>
    <!-- AdminLTE App -->
    <!-- AdminLTE for demo purposes -->
    <script src="@Url.Content("~/Content/")dist/js/demo.js"></script>
    <!-- page script -->

}
