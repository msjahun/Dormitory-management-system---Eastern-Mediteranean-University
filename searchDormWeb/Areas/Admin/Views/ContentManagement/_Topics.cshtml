    <script>
        $(function () {
          
            $('#TopicsTable').on('processing.dt', function (e, settings, processing) {
                if (processing) {
                    Pace.start();
                } else {
                    Pace.stop();
                }
            }).DataTable({
                'paging': true,
                'lengthChange': true,
                 "language": {
                    "url": "@Url.Content("~/frontend_Content/")assets/js/@Localizer["DataTable_i18n/English.json"]"
                },
                "aLengthMenu": [[20, 3, 5], [20, 3, 5]],
                'searching': false,
                'ordering': false,
                'info': true,
                'autoWidth': false,
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": true, // for disable multiple column at once
                "ajax": {
                    "url": "@Html.Raw(Url.Action("Topics", "ContentManagement"))",
                    "type": "POST",
                    "data": function (d) {
                        d.myKey = "myValue";
                        d.DiscountName = "myValue";
                        d.CouponCode = "myValue";
                        d.DiscountType = "myValue";
                    },
                    "datatype": "json"
                },
                "columns": [

                   
                    {"data": "systemName" },
                    {"render": function (data, type, full, meta) {
                            if (full.published == true)
                                return '<i class="fa fa-check" aria-hidden="true"></i>';
                            else
                                return '<i class="fa fa-times" aria-hidden="true"></i>';}
                    },

                    {
                        "render": function (data, type, full, meta) {
                            if (full.passwordProtected == true)
                                return '<i class="fa fa-check" aria-hidden="true"></i>';
                            else
                                return '<i class="fa fa-times" aria-hidden="true"></i>';
                        }
                    },
                    {
                        "render": function (data, type, full, meta) {
                            if (full.includeInSiteMap == true)
                                return '<i class="fa fa-check" aria-hidden="true"></i>';
                            else
                                return '<i class="fa fa-times" aria-hidden="true"></i>';
                        }
                    },
                    {
                        "render": function (data, type, full, meta) {
                            if (full.includeInTopMenu == true)
                                return '<i class="fa fa-check" aria-hidden="true"></i>';
                            else
                                return '<i class="fa fa-times" aria-hidden="true"></i>';
                        }
                    },
                    {
                        "render": function (data, type, full, meta) {
                            if (full.includeInFooterColumn1 == true)
                                return '<i class="fa fa-check" aria-hidden="true"></i>';
                            else
                                return '<i class="fa fa-times" aria-hidden="true"></i>';
                        }
                    },
                    {
                        "render": function (data, type, full, meta) {
                            if (full.includeInFooterColumn2 == true)
                                return '<i class="fa fa-check" aria-hidden="true"></i>';
                            else
                                return '<i class="fa fa-times" aria-hidden="true"></i>';
                        }
                    },
                 
                    {"data": "displayOrder" },
                    {"render": function (data, type, full, meta) {
                     return '<a class="btn btn-primary" href="/Admin/ContentManagement/TopicEdit/"><i class="fa fa-pencil"></i> @Localizer["Edit"]</a>'; }
                    }
                    
                    
                ]


