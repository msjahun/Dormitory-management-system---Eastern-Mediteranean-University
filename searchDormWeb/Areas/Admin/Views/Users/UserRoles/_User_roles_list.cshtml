
@{
    ViewBag.Title = "User roles";
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";

    var model = Model;
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small>Optional description</small>
        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">
                    <secure-content asp-area="Admin" asp-controller="Users" asp-action="UserRoleAdd">
                        <a asp-action="UserRoleAdd" asp-controller="Users" class="btn btn-primary "> <i class="fa fa-plus-square"></i> Add New</a>
                    </secure-content>
                  
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
          
            <div class="box box-primary">

                <!-- /.box-header -->
                <div class="box-body">

                    <div class="overflow">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Active</th>
                                    <th>Is system role</th>

                                    <secure-content asp-area="Admin" asp-controller="Users" asp-action="UserRoleEdit">
                                        <th>Edit</th>
                                    </secure-content>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in model)
                                {


                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>
                                            @if (item.IsActive == true)
                                            {
                                                <i class="fa fa-check" aria-hidden="true"></i>}
                                            else
                                            {
                                                <i class="fa fa-times" aria-hidden="true"></i>
                                            }
                                        </td>
                                        <td>
                                            @if (item.IsSystemRole == true)
                                            {

                                                <i class="fa fa-check" aria-hidden="true"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-times" aria-hidden="true"></i>

                                            }

                                        </td>

                                        @{
                                            var parms = new Dictionary<string, string>
                                                                                                    {
                                                                                                        { "User_role_id", item.Id}
                                                                                                    };
                                        }

                                        <secure-content asp-area="Admin" asp-controller="Users" asp-action="UserRoleEdit">
                                            <td> <a asp-action="UserRoleEdit" asp-controller="Users" asp-all-route-data="parms" class="btn btn-primary "> <i class="fa fa-pencil"></i> Edit</a></td>
                                        </secure-content>


                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>


    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

@section styles {


    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/Ionicons/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")dist/css/skins/_all-skins.min.css">
}


