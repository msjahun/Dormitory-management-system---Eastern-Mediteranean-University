                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-primary">
                <div class="box-header"></div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="row">
                            <div class=" col-md-6">
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-4 control-label">Email <i class="fa fa-question-circle" data-toggle="tooltip" data-placement="bottom" title="Email address of a customer used for filtering Email address of a customer used for filteringEmail address of a customer used for filteringEmail address of a customer used for filteringEmail address of a customer used for filteringEmail address of a customer used for filteringEmail address of a customer used for filteringEmail address of a customer used for filteringEmail address of a customer used for filteringEmail address of a customer used for filteringEmail address of a customer used for filteringEmail address of a customer used for filtering" aria-hidden="true"></i></label>

                                    <div class="col-sm-4">
                                        <input type="email" class="form-control" id="inpugtEmail3" placeholder="Email">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-4 control-label">First name <i class="fa fa-question-circle" aria-hidden="true"></i></label>

                                    <div class="col-sm-3">
                                        <input type="password" class="form-control" id="inputPassfdword3" placeholder="Password">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-4 control-label">Last name <i class="fa fa-question-circle" aria-hidden="true"></i></label>

                                    <div class="col-sm-4">
                                        <input type="password" class="form-control" id="inputPassfwords3" placeholder="Password">
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-4 control-label">Date of birth <i class="fa fa-question-circle" aria-hidden="true"></i></label>

                                    <div class="col-sm-4">
                                        <input type="password" class="form-control" id="inputPassgwords3" placeholder="Password">
                                    </div>
                                </div>
                            </div>

                            <div class=" col-md-6">
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-4 control-label">Phone <i class="fa fa-question-circle" aria-hidden="true"></i></label>

                                    <div class="col-sm-4">
                                        <input type="email" class="form-control" id="inpugtEmail3" placeholder="Email">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-4 control-label">IP address <i class="fa fa-question-circle" aria-hidden="true"></i></label>

                                    <div class="col-sm-4">
                                        <input type="password" class="form-control" id="inputPassfdword3" placeholder="Password">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-4 control-label">Customer role <i class="fa fa-question-circle" aria-hidden="true"></i></label>

                                    <div class="col-sm-4">
                                        <input type="password" class="form-control" id="inputPassfwords3" placeholder="Password">
                                    </div>
                                </div>



                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary btn-lg "> <i class="fa fa-search"></i> Search</button>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->

                </form>
            </div>



            <div class="box">

                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th><input type="checkbox"></th>
                                <th>Email</th>
                                <th>Name</th>
                                <th>User role</th>
                                <th>Phone</th>
                                <th>Active</th>
                                <th>Created on</th>
                                <th>Last activity</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in _Users)
                            {


                            <tr>
                                <td><input type="checkbox"></td>
                                <td>@item.User.UserName</td>
                                <td>@item.User.FirstName @item.User.LastName</td>
                                <td>

                                    @foreach (var role in item.userRoles)
                                    {
                                        count++;

                                        @role @if (count != item.userRoles.Count)
                                        {@space

                                        @:&#160;
                                    }
                                    else { count = 0; }


                                    }


                                </td>

                                <td>@item.User.PhoneNumber</td>
                                <td>
                                    @if (item.User.Active == true)
                                    {
                                        <i class="fa fa-check" aria-hidden="true"></i>                }
                                </td>
                                <td>@item.User.CreatedOnUtc</td>
                                <td>@item.User.LastActivityDateUtc</td>
                               
                                @{
                                    var parms = new Dictionary<string, string>
                                {
                                    { "UserID", item.User.Id }
                                };
                                }
                                <td> <a asp-action="Edit" asp-controller="Users" asp-all-route-data="parms" class="btn btn-primary "> <i class="fa fa-pencil"></i> Edit</a></td>
                            </tr>

                        }

                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>


    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

