@using static Dau.Services.Domain.DormitoryBlockServices.DormitoryBlockService;
@model DormitoryBlockCrud
@{
    ViewData["Title"] = Localizer["Edit Dormitory Block"];
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
    var item = Model;
}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewData["Title"]
            <small><a asp-action="DormitoryBlocks" asp-controller="Catalog"><i class="fa fa-arrow-circle-left"></i> @Localizer["back to dormitory blocks list"]</a></small>
        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">
                    
                    
                    
                    <button type="button" form="editForm" onclick="resolveButton('SaveClose')" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> @Localizer["Save"]</button>
                    <button type="button" form="editForm" onclick="resolveButton('SaveContinue')" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> @Localizer["Save and Continue Edit"]</button>
                    <button type="button" form="editForm" onclick="resolveButton('DeleteDormitoryBlock')" class="btn btn-danger "> <i class="fa fa-floppy-o"></i> @Localizer["Delete"]</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab_3" data-toggle="tab" aria-expanded="true">@Localizer["Block Info"]</a></li>
                    <li class=""><a href="#tab_2" data-toggle="tab" aria-expanded="false">@Localizer["Rooms"]</a></li>

                </ul>
                <div class="tab-content">
                    <!-- /.tab-pane -->






                    <div class="tab-pane active" id="tab_3">

                        <div class="box ">
                            <div class="box-header"></div>
                            <!-- /.box-header -->
                            <!-- form start -->

                            <div class="box-body">
                                <form class="form-horizontal" method="post" id="editForm" asp-controller="Catalog" asp-action="DormitoryBlockEdit">
                                    <div style="color:red;" asp-validation-summary="All"></div>
                                 
                                        <input type="hidden" asp-for="Id" />

                                        <div class="form-group">
                                            <dau-label asp-for="Id"></dau-label>
                                            <div class="col-sm-9">
                                                <p>@item.Id</p>
                                            </div>

                                        </div>


                                        <div class="form-group">
                                            <dau-label asp-for="Dormitory"></dau-label>
                                            <div class="col-sm-8">
                                                <select asp-for="Dormitory" asp-items="_dropdown.Dormitories()" id="DormitorySelect" class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true"></select>
                                            </div>
                                            <span asp-validation-for="Dormitory"></span>

                                        </div>

                                        <dau-tabs id="ContentLanguageTab">

                                            <dau-tab active="true" id="tab2" name="English" flag="@Url.Content("~/Content/")dist/img/us.png">
                                                <div class="form-group">

                                                    <dau-label asp-for="localizedContent[0].Name"></dau-label>
                                                    <dau-input asp-for="localizedContent[0].Name" type="text"></dau-input>
                                                    <span asp-validation-for="localizedContent[0].Name"></span>

                                                </div>

                                                <div class="form-group">

                                                    <dau-label asp-for="localizedContent[0].Description"></dau-label>
                                                    <dau-textarea asp-for="localizedContent[0].Description"></dau-textarea>
                                                    <span asp-validation-for="localizedContent[0].Description"></span>

                                                </div>



                                            </dau-tab>
                                            <dau-tab id="tab3" name="Turkish" flag="@Url.Content("~/Content/")dist/img/tr.png">
                                                <div class="form-group">

                                                    <dau-label asp-for="localizedContent[1].Name"></dau-label>
                                                    <dau-input asp-for="localizedContent[1].Name" type="text"></dau-input>
                                                    <span asp-validation-for="localizedContent[1].Name"></span>

                                                </div>

                                                <div class="form-group">

                                                    <dau-label asp-for="localizedContent[1].Description"></dau-label>
                                                    <dau-textarea asp-for="localizedContent[1].Description"></dau-textarea>
                                                    <span asp-validation-for="localizedContent[1].Description"></span>

                                                </div>
                                            </dau-tab>
                                        </dau-tabs>


                                        <!-- /.nav-tabs -->








                                        <div class="form-group">
                                            <dau-label asp-for="Published"></dau-label>
                                            <div class="col-sm-8">
                                                <input asp-for="Published" type="checkbox">
                                            </div>
                                            <span asp-validation-for="Published"></span>
                                        </div>




                                        <div class="form-group">
                                            <dau-label asp-for="CreatedOn"></dau-label>

                                            <div class="col-sm-8">
                                                <input type="hidden" asp-for="CreatedOn" />
                                                <p>@item.CreatedOn</p>
                                            </div>

                                        </div>

                                        <div class="form-group">
                                            <dau-label asp-for="UpdatedOn"></dau-label>

                                            <div class="col-sm-8">
                                                <input type="hidden" asp-for="UpdatedOn" />
                                                <p>@item.UpdatedOn</p>
                                            </div>

                                        </div>



                                </form>

                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box-->
                    </div>














                    <!-- /.tab-pane -->
                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="tab_2">

                        <div class="box ">
                            <div class="box-header">

                            </div>
                            <!-- /.box-header -->
                            <!-- form start -->

                            <div class="box-body">
                                <p>
                                    @Localizer["Here you'll find a list of all the rooms in the current dormitory block"]
                                </p>
                                <div class="class=" overflow">

                                    <table id="RoomsTable" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>@Localizer["Room #"]</th>
                                                <th>@Localizer["Room name"]</th>
                                                <th>@Localizer["Dormitory block"]</th>
                                                <th>@Localizer["SKU"]</th>
                                                <th>@Localizer["Price"]</th>
                                                <th>@Localizer["Quota"]</th>
                                                <th>@Localizer["Published"]</th>
                                                <th>@Localizer["Edit"]</th>


                                            </tr>
                                        </thead>
                                        <tbody></tbody>

                                    </table>
                                    </div>
                                </div>
                            </div>
                    </div>

                </div>
                <!-- /.tab-content -->
            </div>


        </div>
    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>



