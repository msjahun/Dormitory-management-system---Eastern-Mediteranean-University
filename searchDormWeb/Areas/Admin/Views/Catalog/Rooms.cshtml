@using searchDormWeb.Areas.Admin.Models.Catalog
@model RoomsVm
@{
    ViewBag.Title = Localizer["Rooms"];
    Layout = "../shared/_LayoutAdmin.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Rooms list
           
        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">

                    <a asp-action="RoomAdd" asp-controller="Catalog" asp-area="Admin" class="btn btn-primary "> <i class="fa fa-plus-square"></i> @Localizer["Add new"]</a>
                    @*<button type="submit" class="btn btn-primary "> <i class="fa fa-plus-square"></i> @Localizer["Download catalog as pdf"]</button>*@
                    <div class="btn-group">
                        <button type="button" class="btn btn-success btn-flat dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-download"></i> @Localizer["Export"]</button>
                        <button type="button" class="btn btn-success btn-flat dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only">@Localizer["Toggle Dropdown"]</span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="ExportRoomsExcel/?Id=1">@Localizer["Export all"]</a></li>
                            <li><a href="ExportRoomsExcel/?Id=2">@Localizer["Export selected"]</a></li>
                        </ul>
                    </div>



                    <button type="submit" class="btn btn-danger "> <i class="fa fa-trash"></i> @Localizer["Delete"]</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">
        @if (Model!=null)
        {
         string alerttype = (Model.AlertSuccessful)?"alert-success":"alert-danger";

            <div class="alert @alerttype alert-dismissible"> <button type="button" class="close text-white" data-dismiss="alert" aria-hidden="true">×</button> <i class="icon fa fa-check"></i> @Model.AlertMessage</div>
        }
        <!--------------------------
    | Your Page Content Here |
    -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-solid">
                <div class="box-header"></div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="row">
                            <div class=" col-md-12">
                                <div class="form-group">
                                    <dau-label asp-for="RoomName"></dau-label>
                                    <dau-input asp-for="RoomName" type="text"></dau-input>
                                    <span asp-validation-for="RoomName"></span>
                                </div>

                                <div class="form-group">
                                    <dau-label asp-for="DormitoryBlock"></dau-label>
                                    <dau-select asp-for="DormitoryBlock"></dau-select>
                                    <span asp-validation-for="DormitoryBlock"></span>
                                </div>

                                <div class="form-group">
                                    <dau-label asp-for="Published"></dau-label>
                                    <dau-select asp-for="Published"></dau-select>
                                    <span asp-validation-for="Published"></span>
                                </div>


                           

                                <div class="form-group">
                                    <dau-label asp-for="GoDirectoryToRoomSKU"></dau-label>
                                    <dau-inputaddon addon-type="button" text="Go" type="text" asp-for="GoDirectoryToRoomSKU"></dau-inputaddon>
                                    <span asp-validation-for="GoDirectoryToRoomSKU"></span>
                                </div>


                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary btn-lg "> <i class="fa fa-search"></i> @Localizer["Search"]</button>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->

                </form>
            </div>




            <div class="box box-solid">

                <!-- /.box-header -->
                <div class="box-body">

                    <div class="overflow">
                        <table id="RoomsListTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th><input type="checkbox" /></th>
                                    <th>@Localizer["Room #"]</th>
                                    @*<th>@Localizer["Picture"]</th>*@
                                    <th>@Localizer["Dormitory name"]</th>
                                    <th>@Localizer["Room name"]</th>
                                    <th>@Localizer["SKU"]</th>
                                    <th>@Localizer["Price"]</th>
                                    <th>@Localizer["Quota"]</th>
                                    <th>@Localizer["Published"]</th>
                                    <th>@Localizer["Edit"]</th>
                                </tr>
                            </thead>


                        </table>
                    </div>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>


    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

@section styles {


    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/select2/dist/css/select2.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/Ionicons/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
