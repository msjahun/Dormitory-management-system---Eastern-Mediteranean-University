@using searchDormWeb.Areas.Admin.Models.Catalog
@model ReviewEdit
@{
    ViewData["Title"] = Localizer["Edit Room Review"];
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small><a asp-action="RoomReviews" asp-controller="Catalog"><i class="fa fa-arrow-circle-left"></i> @Localizer["back to room reviews list"]</a></small>

        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">

                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> @Localizer["Save"]</button>
                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> @Localizer["Save and Continue Edit"]</button>
                    <button type="submit" form="addForm" class="btn btn-danger "> <i class="fa fa-trash-o"></i> @Localizer["Delete"]</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-solid">
                <div class="box-header"></div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <dau-label asp-for="Room"></dau-label>
                            <div class="col-sm-8">
                                <a>Alfam b block</a>
                            </div>

                        </div>

                        <div class="form-group">
                           <dau-label asp-for="Dormitory"></dau-label>
                            <div class="col-sm-8">
                                <p>Kibris Order</p>
                            </div>

                        </div>



                        <div class="form-group">
                            <dau-label asp-for="Cutomer"></dau-label>
                            <div class="col-sm-8">
                                <p>kibrisorder@gmail.com</p>
                            </div>

                        </div>



                        <div class="form-group">
                          <dau-label asp-for="Title"></dau-label>
                            <dau-input asp-for="Title" type="text"></dau-input>
                            <span asp-validation-for="Title"></span>
                        </div>


                        <div class="form-group">
                           
                            <dau-label asp-for="ReviewText"></dau-label>
                            <dau-textarea asp-for="ReviewText" ></dau-textarea>
                            <span asp-validation-for="ReviewText"></span>
                        </div>


                        <div class="form-group">
                           
                            <dau-label asp-for="ReplyText"></dau-label>
                            <dau-textarea asp-for="ReplyText" ></dau-textarea>
                            <span asp-validation-for="ReplyText"></span>

                        </div>

                        <div class="form-group">
                            <dau-label asp-for="Rating"></dau-label>
                            <div class="col-sm-8">
                                <p>5</p>
                            </div>

                        </div>



                        <div class="form-group">
                            
                            <dau-label asp-for="isApproved"></dau-label>
                            <div class="col-sm-8">
                                <input asp-for="isApproved" type="checkbox">
                            </div>
                            <span asp-validation-for="isApproved"></span>
                        </div>


                        <div class="form-group">
                            
                            <dau-label asp-for="CreatedOn"></dau-label>
                            <div class="col-sm-8">
                                <p>10/30/2017 12:47:30AM</p>
                            </div>

                        </div>



                    </div>
                    <!-- /.box-body -->

                </form>
            </div>


        </div>


    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

@section styles {


    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/Ionicons/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")dist/css/skins/_all-skins.min.css">
}


