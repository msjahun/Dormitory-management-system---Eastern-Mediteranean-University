@using searchDormWeb.Areas.Admin.Models.Notifications
@model AnnouncementAdd
@{
    ViewData["Title"] = "Add Announcements";
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
}




<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small><a asp-action="Announcements" asp-controller="Notifications"><i class="fa fa-arrow-circle-left"></i> back to announcements list</a></small>
        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">

                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> Save</button>
                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> Save and Continue Edit</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-primary">
                <div class="box-header"></div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            
                            <dau-label asp-for="Title"></dau-label>
                            <dau-input asp-for="Title" type="text"></dau-input>
                            <span asp-validation-for="Title"></span>
                        </div>

                        <div class="form-group">
                            
                            <dau-label asp-for="Message"></dau-label>
                            <dau-textarea asp-for="Message"></dau-textarea>
                            <span asp-validation-for="Message"></span>
                        </div>

                        <div class="form-group">
                            
                            <dau-label asp-for="StartDate"></dau-label>
                            <dau-date asp-for="StartDate" ></dau-date>
                            <span asp-validation-for="StartDate"></span>
                        </div>


                        <div class="form-group">
                          
                            <dau-label asp-for="EndDate"></dau-label>
                            <dau-date asp-for="EndDate" ></dau-date>
                            <span asp-validation-for="EndDate"></span>
                        </div>


                        <div class="form-group">
                            <dau-label asp-for="Priority"></dau-label>
                            <dau-select asp-for="Priority" ></dau-select>
                            <span asp-validation-for="Priority"></span>
                        </div>



                        <div class="form-group">
                            <dau-label asp-for="Published"></dau-label>
                            <div class="col-sm-8">
                                <input asp-for="Published" type="checkbox">
                            </div>
                            <span asp-validation-for="Published"></span>

                        </div>


                    </div>
                    <!-- /.box-body -->

                </form>
            </div>


        </div>


    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

