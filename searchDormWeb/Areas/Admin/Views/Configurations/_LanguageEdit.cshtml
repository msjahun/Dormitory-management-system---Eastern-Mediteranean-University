    <script>

        function GetModelResouce(resourceId) {

            $("#EditResourceName").val();
            $("#EditValue").val();

            ResouceId = resourceId;

            $.ajax({
                type: "POST",
                url: "/Admin/Configurations/GetResource/?Id=" + resourceId,

                success: function (result) {
                    if (result.success == true) {

                        $('#modal-editResources').modal('show');
                        $("#EditResourceName").val(result.resourceName);
                        $("#EditValue").val(result.resourceValue);
                        $("#ResourceId").val(result.resourceId);
                    } else {
                        alert("Failed to get resource");
                    }
                }
            });

            //cal ajax and show model when data has been replaced

        }



        function AddResource() {

          //  alert($("#AddResourceName").val());
           // alert($("#AddValue").val());
           // alert(@item.Id);
            


            $.ajax({
                type: "POST",
                url: "/Admin/Configurations/AddNewResource",
                data: {
                    "ResourceName": $("#AddResourceName").val(),
                    "ResourceValue": $("#AddValue").val(),
                    "LanguageId":@item.Id
                },
                success: function (result) {
                    if (result.success == true) {
                        alert("resource added successfully");
                        $("#AddResourceName").val("");
                        $("#AddValue").val("");
                        $('#modal-addResources').modal('hide');

                    } else {
                        alert("Failed to add resource");
                        $('#modal-addResources').modal('hide');
                    }
                    location.reload();
                }
            });

            //cal ajax and show model when data has been replaced

        }


        var ResouceId=0;
        function updateResource() {

         // alert(  $("#EditResourceName").val());
         



            $.ajax({
                type: "POST",
                url: "/Admin/Configurations/SaveResource",
                data: {
                    "ResourceId":ResouceId,
                      "ResourceName": $("#EditResourceName").val(),
                      "ResourceValue": $("#EditValue").val(),
                    "LanguageId":@item.Id
                },
                success: function (result) {
                    if (result.success == true) {

                    alert("resource added successfully")
                        $("#EditResourceName").val("");
                        $("#EditValue").val("");
                        ResouceId = 0;
                     
                    } else {
                        alert("Failed to get resource");
                       
                    }
                    location.reload();
                }
            });

            //cal ajax and show model when data has been replaced

        }



        function DeleteResource(resourceId) {

           // $("#EditResourceName").val();
           // $("#EditValue").val();



            $.ajax({
                type: "POST",
                url: "/Admin/Configurations/DeleteResource/?Id=" + resourceId,
         
                success: function (result) {
                    if (result.success == true) {

                    alert("resource deleted successfully")
                      
                    } else {
                        alert("Failed to get resource");
                    }
                    location.reload();
                }
            });

            //cal ajax and show model when data has been replaced

        }

        var resourceTable;

        $(function () {


            $("#SearchBtn").click(function () {
                resourceTable.ajax.reload();
            });

            $("#AddResouceBtn").click(function () {
                AddResource();
            });


        $("#EditResouceBtn").click(function () {
            updateResource();

            });

         
         
            resourceTable=    $('#Resources').on('processing.dt', function (e, settings, processing) {
                if (processing) {
                    Pace.start();
                } else {
                    Pace.stop();
                }
            }).DataTable({
                'paging': true,
                'lengthChange': true,
                 "language": {
                    "url": "@Url.Content("~/frontend_Content/")assets/js/@Localizer["DataTable_i18n/English.json"]"
                },
                "aLengthMenu": [[20, 3, 5], [20, 3, 5]],
                'searching': false,
                'ordering': false,
                'info': true,
                'autoWidth': false,
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": true, // for disable multiple column at once
                "ajax": {
                    "url":"/Admin/Configurations/LanguagesResources/?LanguageId="+@item.Id,
                     
                    "type": "POST",
                    "data": function (d) {
                        d.ResourceName = $("#resourceTab_ResourceName").val();
                        d.ResourceValue = $("#resourceTab_Value").val();
                        d.myKey = "myValue";
                        d.DiscountName = "myValue";
                        d.CouponCode = "myValue";
                        d.DiscountType = "myValue";
                    },
                    "datatype": "json"
                },
                "columns": [

                
                    { "data": "resourceId" },
                    {"data": "resourceName" },
                    {"data": "resourceValue" },
                    
                    {"render": function (data, type, full, meta) {
                        return '<button class="btn btn-primary"  onclick="GetModelResouce(' + full.resourceId+')"><i class="fa fa-pencil"></i> @Localizer["Edit"]</button>'; }
                    }
                    ,
                    {"render": function (data, type, full, meta) {
                        return '<a class="btn btn-danger" onclick="DeleteResource(' + full.resourceId+')"><i class="fa fa-times"></i> @Localizer["Delete"]</a>'; }
                    }
                    
                    
                ]


            })
        })
    </script>
