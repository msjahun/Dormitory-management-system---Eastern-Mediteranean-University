                        if (input.files[0].size > 3145728) {
                            $('#ImagePlaceholder').attr('src', '/Content/dist/img/default-image_100.png');

                        }

                            else
                        $('#ImagePlaceholder').attr('src', e.target.result);

                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }

