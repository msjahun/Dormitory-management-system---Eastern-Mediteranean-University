@using Dau.Services.Email
@model EmailAccountCrud
@{
    ViewData["Title"] = Localizer["Edit Email Account"];
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
    var item = Model;
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small><a asp-action="EmailAccounts" asp-controller="Configurations"><i class="fa fa-arrow-circle-left"></i> @Localizer["back to EmailAccounts list"]</a></small>

        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">

                    <button type='button' onClick='resolveButton("SaveClose")' class="btn btn-primary "> <i class="fa fa-floppy-o"></i> @Localizer["Save"]</button>
                    <button type='button' onClick='resolveButton("SaveContinue")' class="btn btn-primary "> <i class="fa fa-floppy-o"></i> @Localizer["Save and Continue Edit"]</button>

                    <button type="submit"  onClick='resolveButton("Delete")'  class="btn btn-danger "> <i class="fa fa-trash-o"></i> @Localizer["Delete"]</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">
        <div id="alertACL"></div>
        <!--------------------------
    | Your Page Content Here |
    -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
            <form class="form-horizontal" method="post" id="editdForm">
                <div class="box ">
                    <div class="box-header"></div>
                    <!-- /.box-header -->
                    <!-- form start -->

                    <div style="color:red;" asp-validation-summary="All"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <dau-label asp-for="Id"></dau-label>
                        <div class="col-sm-9">
                            <p>@item.Id</p>
                        </div>
                    </div>
                    <div class="box-body">


                        <div class="form-group">

                            <dau-label asp-for="EmailAddress"></dau-label>
                            <dau-input asp-for="EmailAddress" type="email"></dau-input>
                            <span asp-validation-for="EmailAddress"></span>
                        </div>

                        <div class="form-group">

                            <dau-label asp-for="EmailDisplayName"></dau-label>
                            <dau-input asp-for="EmailDisplayName" type="text"></dau-input>
                            <span asp-validation-for="EmailDisplayName"></span>
                        </div>


                        <div class="form-group">

                            <dau-label asp-for="Host"></dau-label>
                            <dau-input asp-for="Host" type="text"></dau-input>
                            <span asp-validation-for="Host"></span>

                        </div>


                        <div class="form-group">

                            <dau-label asp-for="Port"></dau-label>
                            <dau-input asp-for="Port" type="number"></dau-input>
                            <span asp-validation-for="Port"></span>

                        </div>


                        <div class="form-group">
                            <dau-label asp-for="EmailAccoutUser"></dau-label>
                            <dau-input asp-for="EmailAccoutUser" type="email"></dau-input>
                            <span asp-validation-for="EmailAccoutUser"></span>

                        </div>


                        <div class="form-group" id="ChangePasswordFormGroup">
                            <dau-label asp-for="EmailAccoutPassword"></dau-label>
                            <dau-inputaddon addon-type="button" text="@Localizer["Change password"]" asp-for="EmailAccoutPassword" type="text"></dau-inputaddon>
                            <span asp-validation-for="EmailAccoutPassword"></span>

                        </div>

                        <div class="form-group">
                            <dau-label asp-for="SSL"></dau-label>
                            <div class="col-sm-8">
                                <input asp-for="SSL" type="checkbox">
                            </div>
                            <span asp-validation-for="SSL"></span>

                        </div>


                        <div class="form-group">

                            <dau-label asp-for="UseDefaultCredentials"></dau-label>
                            <div class="col-sm-8">
                                <input asp-for="UseDefaultCredentials" type="checkbox">
                            </div>
                            <span asp-validation-for="UseDefaultCredentials"></span>

                        </div>


                    </div>
                    <!-- /.box-body -->


                </div>
                <div class="box ">
                    <div class="box-header">@Localizer["Send Test Email(save settings first by clicking \"Save\" button)"]</div>
                    <!-- /.box-header -->
                    <!-- form start -->

                    <div class="box-body">


                        <div class="form-group" id="SendEmailFormGroup">

                            <dau-label asp-for="SendEmailTo"></dau-label>
                            <dau-inputaddon addon-type="button" text="@Localizer["Send test email"]" asp-for="SendEmailTo" type="email"></dau-inputaddon>
                            <span asp-validation-for="SendEmailTo"></span>


                        </div>



                    </div>
                    <!-- /.box-body -->

                </div>
            </form>


        </div>


    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

@section styles {


    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/Ionicons/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")dist/css/skins/_all-skins.min.css">
}


@section scripts
    {

    <script src="@Url.Content("~/Content/")bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="@Url.Content("~/Content/")bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- AdminLTE App -->
    <script src="@Url.Content("~/Content/")dist/js/adminlte.min.js"></script>
    <script src="@Url.Content("~/Content/")bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="@Url.Content("~/Content/")bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="@Url.Content("~/Content/")bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="@Url.Content("~/Content/")bower_components/fastclick/lib/fastclick.js"></script>
    <!-- AdminLTE App -->
    <!-- AdminLTE for demo purposes -->
    <script src="@Url.Content("~/Content/")dist/js/demo.js"></script>
    <!-- page script -->
    <!-- page script -->

    <script>


        function resolveButton(button) {
            switch (button) {

                case "SaveClose": {
                    alert("SaveClose");
                }; break;


                case "SaveContinue": {
                    console.log("SaveContinue");
                    $('#editdForm').attr('action', "/admin/Configurations/EmailAccountEdit").submit();
                }; break;

                        case "Delete": {
                    console.log("DeleteEmailAccount");
                    var r = confirm("@Localizer["Are you sure you want to delete Email account?"]");
                    if (r == true) {
                        $('#editdForm').attr('action', "/admin/Configurations/DeleteEmailAccount").submit();
                    } 
                   
                }; break;
            }
            //   $("#formId").submit();
        }

        $("#EmailAccoutPasswordBtn").click(function () {
        //    alert($("#EmailAccoutPassword").val());

           

            if ($("#EmailAccoutPassword").val() <= 0 ) {
              
                $("#ChangePasswordFormGroup").attr("class", "form-group has-error");
            

            } else {

                $("#ChangePasswordFormGroup").attr("class", "form-group has-success");
                //ajax change password
                $('#editdForm').attr('action', "/admin/Configurations/EmailAccountChangePassword").submit();
               
                

            }

        });


        $("#SendEmailToBtn").click(function () {
            //  alert($("#SendEmailTo").val());

            var valueToTest = $("#SendEmailTo").val();
            if ($("#SendEmailTo").val() <= 0) {

                $("#SendEmailFormGroup").attr("class", "form-group has-error");


            } else {
                //check if email is valid
                $("#SendEmailFormGroup").attr("class", "form-group has-success");
                //ajax send test email
                $('#editdForm').attr('action', "/admin/Configurations/TestEmailAccount").submit();

            }

        });
    </script>

}