@using searchDormWeb.Areas.Admin.Models.Configuration
@model LanguageAdd
@{
            ViewData["Title"] = Localizer["Add Language"];
            Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
        }

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewData["Title"]
            <small><a asp-action="Languages" asp-controller="Configurations"><i class="fa fa-arrow-circle-left"></i> @Localizer["back to language list"]</a></small>
        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">

                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> @Localizer["Save"]</button>
                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> @Localizer["Save and Continue Edit"]</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab_3" data-toggle="tab" aria-expanded="true">@Localizer["Info"]</a></li>
                    <li class=""><a href="#tab_1" data-toggle="tab" aria-expanded="false">@Localizer["String resource"]</a></li>

                </ul>
                <div class="tab-content">
                    <!-- /.tab-pane -->






                    <div class="tab-pane active" id="tab_3">

                        <div class="box ">
                            <div class="box-header"></div>
                            <!-- /.box-header -->
                            <!-- form start -->

                            <div class="box-body">
                                <form class="form-horizontal">





                                    <div class="form-group">
                                       
                                        <dau-label asp-for="Name"></dau-label>
                                        <dau-input asp-for="Name" type="text" ></dau-input>
                                        <span asp-validation-for="Name"></span>

                                    </div>


                                    <div class="form-group">
                                       
                                        <dau-label asp-for="LanguageCulture"></dau-label>
                                        <dau-select asp-for="LanguageCulture" ></dau-select>
                                        <span asp-validation-for="LanguageCulture"></span>

                                    </div>


                                    <div class="form-group">
                                        <dau-label asp-for="UniqueSEOCode"></dau-label>
                                        <dau-input asp-for="UniqueSEOCode" type="text"></dau-input>
                                        <span asp-validation-for="UniqueSEOCode"></span>

                                    </div>


                                    <div class="form-group">
                                       <dau-label asp-for="RightToLeft"></dau-label>
                                        <div class="col-sm-8">
                                            <input asp-for="RightToLeft" type="checkbox">
                                        </div>
                                        <span asp-validation-for="RightToLeft"></span>

                                    </div>


                                    <div class="form-group">
                                       
                                        <dau-label asp-for="DefaultCurrency"></dau-label>
                                        <dau-select asp-for="DefaultCurrency" ></dau-select>
                                        <span asp-validation-for="DefaultCurrency"></span>

                                    </div>

                                    <div class="form-group">
                 
                                        <dau-label asp-for="LimitedToDormitories"></dau-label>
                                        <dau-select multiple-select="true" asp-for="LimitedToDormitories" ></dau-select>
                                        <span asp-validation-for="LimitedToDormitories"></span>

                                    </div>

                                    <div class="form-group">
                                        <dau-label asp-for="Published"></dau-label>
                                        <div class="col-sm-8">
                                            <input asp-for="Published" type="checkbox">
                                        </div>
                                        <span asp-validation-for="Published"></span>

                                    </div>


                                    <div class="form-group">
                                       
                                        <dau-label asp-for="DisplayOrder"></dau-label>
                                        <dau-input asp-for="DisplayOrder" type="number"></dau-input>
                                        <span asp-validation-for="DisplayOrder"></span>

                                    </div>
                                </form>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box-->
                    </div>















                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="tab_1">
                        <div class="box ">
                            <div class="box-header"></div>
                            <!-- /.box-header -->
                            <!-- form start -->

                            <div class="box-body">
                                <p>@Localizer["You need to save language before you can make or change resources for this language."]</p>
                            </div>
                        </div>
                    </div>
                    <!-- /.tab-pane -->


                </div>
                <!-- /.tab-content -->
            </div>



        </div>
    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

@section styles {


    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/Ionicons/css/ionicons.min.css">
    <!-- DataTables -->
    <!--Select2-->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/select2/dist/css/select2.min.css">

    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">

    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
