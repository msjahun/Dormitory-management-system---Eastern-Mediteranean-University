@using searchDormWeb.Areas.Admin.Models.Configuration
@model CurrencyEdit
@{
            ViewData["Title"] = Localizer["Edit Currency"];
            Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
        }


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewData["Title"]
            <small><a asp-action="Currencies" asp-controller="Configurations"><i class="fa fa-arrow-circle-left"></i> @Localizer["back to currencies list"]</a></small>
        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">

                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> @Localizer["Save"]</button>
                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> @Localizer["Save and Continue Edit"]</button>
                    <button type="submit" form="addForm" class="btn btn-danger "> <i class="fa fa-trash-o"></i> @Localizer["Delete"]</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->

            <div class="box ">
                <div class="box-header"></div>
                <!-- /.box-header -->
                <!-- form start -->

                <div class="box-body">

                    <form class="form-horizontal">
                        <dau-tabs id="LanguageTab">
                            <dau-tab id="tab1" name="Standard" active="true">

                                <div class="form-group">
                                    <dau-label asp-for="localizedCurrencyContent[0].Name"></dau-label>
                                    <dau-input asp-for="localizedCurrencyContent[0].Name" type="text"></dau-input>
                                    <span asp-validation-for="localizedCurrencyContent[0].Name"></span>
                                </div>

                            </dau-tab>
                            <dau-tab id="tab2" name="English" flag="@Url.Content("~/Content/")dist/img/us.png">

                                <div class="form-group">
                                    <dau-label asp-for=" localizedCurrencyContent[1].Name"></dau-label>
                                    <dau-input asp-for="localizedCurrencyContent[1].Name" type="text"></dau-input>
                                    <span asp-validation-for="localizedCurrencyContent[1].Name"></span>
                                </div>


                            </dau-tab>
                            <dau-tab id="tab3" name="Turkish" flag="@Url.Content("~/Content/")dist/img/tr.png">
                                <div class="form-group">
                                    <dau-label asp-for="localizedCurrencyContent[2].Name"></dau-label>
                                    <dau-input asp-for="localizedCurrencyContent[2].Name" type="text"></dau-input>
                                    <span asp-validation-for="localizedCurrencyContent[2].Name"></span>
                                </div>

                            </dau-tab>
                        </dau-tabs>


                        <!-- /.nav-tabs -->




                        <div class="form-group">

                            <dau-label asp-for="CurrencyCode"></dau-label>
                            <dau-input asp-for="CurrencyCode" type="text"></dau-input>
                            <span asp-validation-for="CurrencyCode"></span>

                        </div>


                        <div class="form-group">

                            <dau-label asp-for="Rate"></dau-label>
                            <dau-input asp-for="Rate" type="number"></dau-input>
                            <span asp-validation-for="Rate"></span>
                        </div>


                        <div class="form-group">

                            <dau-label asp-for="DisplayLocale"></dau-label>
                            <dau-select asp-for="DisplayLocale"></dau-select>
                            <span asp-validation-for="DisplayLocale"></span>

                        </div>


                        <div class="form-group">

                            <dau-label asp-for="CustomFormatting"></dau-label>
                            <dau-input asp-for="CustomFormatting" type="text"></dau-input>
                            <span asp-validation-for="CustomFormatting"></span>
                        </div>


                        <div class="form-group">

                            <dau-label asp-for="LimitToDormitories"></dau-label>
                            <dau-select multiple-select="true" asp-for="LimitToDormitories"></dau-select>
                            <span asp-validation-for="LimitToDormitories"></span>

                        </div>



                        <div class="form-group">

                            <dau-label asp-for="RoundingType"></dau-label>
                            <dau-select asp-for="RoundingType" ></dau-select>
                            <span asp-validation-for="RoundingType"></span>

                        </div>



                        <div class="form-group">

                            <dau-label asp-for="Published"></dau-label>
                            <div class="col-sm-8">
                                <input asp-for="Published" type="checkbox">
                            </div>
                            <span asp-validation-for="Published"></span>

                        </div>


                        <div class="form-group">

                            <dau-label asp-for="DisplayOrder"></dau-label>
                            <dau-input asp-for="DisplayOrder" type="text"></dau-input>
                            <span asp-validation-for="DisplayOrder"></span>

                        </div>


                        <div class="form-group">
                            <dau-label asp-for="CreatedOn"></dau-label>
                            <div class="col-sm-8">
                                <p>3/15/2016 4:23:01 AM</p>
                            </div>

                        </div>

                        <div class="form-group">
                            <dau-label asp-for="UpdatedOn"></dau-label>
                            <div class="col-sm-8">
                                <p>3/15/2016 4:23:01 AM</p>
                            </div>

                        </div>


                    </form>
                </div>
            </div>

        </div>
    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

@section styles {


    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/Ionicons/css/ionicons.min.css">
    <!-- DataTables -->
    <!--Select2-->
    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/select2/dist/css/select2.min.css">

    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">

    <link rel="stylesheet" href="@Url.Content("~/Content/")bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="@Url.Content("~/Content/")dist/css/AdminLTE.min.css">
