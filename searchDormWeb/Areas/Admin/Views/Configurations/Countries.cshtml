    <script>
        $(function () {
          $.getJSON("@Url.Content("~/frontend_Content/")assets/js/DataTable_aLenthMenu/aLenthMenu_20_200.json", function (aLength) {
            $('#CountriesTable').on('processing.dt', function (e, settings, processing) {
                if (processing) {
                    Pace.start();
                } else {
                    Pace.stop();
                }
            }).DataTable({
                'paging': true,
                 "language": {
                    "url": "@Url.Content("~/frontend_Content/")assets/js/@Localizer["DataTable_i18n/English.json"]"
                },
                'lengthChange': true,
                "aLengthMenu": aLength,
                'searching': false,
                'ordering': false,
                'info': true,
                'autoWidth': false,
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": true, // for disable multiple column at once
                "ajax": {
                     "url": "@Html.Raw(Url.Action("Countries", "Configurations"))",
                    "type": "POST",
                    "data": function (d) {
                        d.myKey = "myValue";
                        d.DiscountName = "myValue";
                        d.CouponCode = "myValue";
                        d.DiscountType = "myValue";
                    },
                    "datatype": "json"
                },
                "columns": [

                    {"render": function (data, type, full, meta) {
                            return '<input type="checkbox">'; } },
                    {"data": "name" },
                    
                    {"render": function (data, type, full, meta) {
                            if (full.allowBilling == true)
                                return '<i class="fa fa-check" aria-hidden="true"></i>';
                            else
                                return '<i class="fa fa-times" aria-hidden="true"></i>';}
                    }, 
                    {"render": function (data, type, full, meta) {
                            if (full.allowBooking == true)
                                return '<i class="fa fa-check" aria-hidden="true"></i>';
                            else
                                return '<i class="fa fa-times" aria-hidden="true"></i>';}
                    },
                    {"data": "twoLettersIsoCode" },
                    {"data": "threeLettersIsoCode" },
                    {"data": "numberOfStates" },
                    { "data": "displayOrder" }, 
                    {
                        "render": function (data, type, full, meta) {
                            if (full.published == true)
                                return '<i class="fa fa-check" aria-hidden="true"></i>';
                            else
                                return '<i class="fa fa-times" aria-hidden="true"></i>';
                        }
                    },
                    {"render": function (data, type, full, meta) {
                        return '<a class="btn btn-primary" href="/Admin/Configurations/CountryEdit/"><i class="fa fa-pencil"></i> @Localizer["Edit"]</a>'; }
                    }
                    
                    
                ]


            })
            })

        })
    </script>
