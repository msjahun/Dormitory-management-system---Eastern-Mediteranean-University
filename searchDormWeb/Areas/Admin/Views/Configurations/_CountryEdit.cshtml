@using searchDormWeb.Areas.Admin.Models.Configuration
@model CountryEdit
@{
    ViewData["Title"] = "Edit Country";
    Layout = "~/Areas/Admin/Views/shared/_LayoutAdmin.cshtml";
}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewData["Title"]
            <small><a asp-action="Countries" asp-controller="Configurations"><i class="fa fa-arrow-circle-left"></i> back to countries list</a></small>
        </h1>
        <div class="row">
            <div class=" col-md-12">
                <div class="upper_left pull-right">

                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> Save</button>
                    <button type="submit" form="addForm" class="btn btn-primary "> <i class="fa fa-floppy-o"></i> Save and Continue Edit</button>
                    <button type="submit" form="addForm" class="btn btn-danger "> <i class="fa fa-trash-o"></i> Delete</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab_3" data-toggle="tab" aria-expanded="true">Country info</a></li>
                    <li class=""><a href="#tab_1" data-toggle="tab" aria-expanded="false">State and provinces</a></li>

                </ul>
                <div class="tab-content">
                    <!-- /.tab-pane -->






                    <div class="tab-pane active" id="tab_3">

                        <div class="box ">
                            <div class="box-header"></div>
                            <!-- /.box-header -->
                            <!-- form start -->

                            <div class="box-body">
                                <form class="form-horizontal">

                                    <dau-tabs id="LanguageTab">
                                        <dau-tab id="tab1" name="Standard" active="true">

                                            <div class="form-group">
                                                <dau-label asp-for="localizedContentCountry[0].Name"></dau-label>
                                                <dau-input asp-for="localizedContentCountry[0].Name" type="text"></dau-input>
                                                <span asp-validation-for="localizedContentCountry[0].Name"></span>
                                            </div>

                                        </dau-tab>
                                        <dau-tab id="tab2" name="English" flag="@Url.Content("~/Content/")dist/img/us.png">

                                            <div class="form-group">
                                                <dau-label asp-for="localizedContentCountry[1].Name"></dau-label>
                                                <dau-input asp-for="localizedContentCountry[1].Name" type="text"></dau-input>
                                                <span asp-validation-for="localizedContentCountry[1].Name"></span>
                                            </div>

                                        </dau-tab>
                                        <dau-tab id="tab3" name="Turkish" flag="@Url.Content("~/Content/")dist/img/tr.png">


                                            <div class="form-group">
                                                <dau-label asp-for="localizedContentCountry[2].Name"></dau-label>
                                                <dau-input asp-for="localizedContentCountry[2].Name" type="text"></dau-input>
                                                <span asp-validation-for="localizedContentCountry[2].Name"></span>
                                            </div>

                                        </dau-tab>
                                    </dau-tabs>

                                    <!-- /.nav-tabs -->


                                    <div class="form-group">
                                        <dau-label asp-for="AllowBilling"></dau-label>
                                        <div class="col-sm-8">
                                            <input asp-for="AllowBilling" type="checkbox">
                                        </div>
                                        <span asp-validation-for="AllowBilling"></span>

                                    </div>


                                    <div class="form-group">

                                        <dau-label asp-for="AllowBooking"></dau-label>
                                        <div class="col-sm-8">
                                            <input asp-for="AllowBooking" type="checkbox">
                                        </div>
                                        <span asp-validation-for="AllowBooking"></span>
                                    </div>


                                    <div class="form-group">
                                        <dau-label asp-for="TwoLetterIsoCode"></dau-label>
                                        <dau-input asp-for="TwoLetterIsoCode" type="text"></dau-input>
                                        <span asp-validation-for="TwoLetterIsoCode"></span>

                                    </div>


                                    <div class="form-group">

                                        <dau-label asp-for="ThreeLetterIsoCode"></dau-label>
                                        <dau-input asp-for="ThreeLetterIsoCode" type="text"></dau-input>
                                        <span asp-validation-for="ThreeLetterIsoCode"></span>
                                    </div>


                                    <div class="form-group">

                                        <dau-label asp-for="NumericIsoCode"></dau-label>
                                        <dau-input asp-for="NumericIsoCode" type="text"></dau-input>
                                        <span asp-validation-for="NumericIsoCode"></span>
                                    </div>






                                    <div class="form-group">

                                        <dau-label asp-for="Published"></dau-label>
                                        <div class="col-sm-8">
                                            <input asp-for="Published" type="checkbox">
                                        </div>
                                        <span asp-validation-for="Published"></span>
                                    </div>


                                    <div class="form-group">

                                        <dau-label asp-for="DisplayOrder"></dau-label>
                                        <dau-input asp-for="DisplayOrder" type="number"></dau-input>
                                        <span asp-validation-for="DisplayOrder"></span>
                                    </div>
                                </form>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box-->
                    </div>















                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="tab_1">
                        <div class="box ">
                            <div class="box-header"></div>
                            <!-- /.box-header -->
                            <!-- form start -->

                            <div class="box-body">

                                <div class="overflow">
                                    <table id="example2" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Abbreviation</th>
                                                <th>Published</th>
                                                <th>Display order</th>
                                                <th>Edit</th>
                                                <th>Delete</th>

                                            </tr>
                                        </thead>
                                        <tbody></tbody>

                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.tab-pane -->


                </div>
                <!-- /.tab-content -->
            </div>



        </div>
    </section>
    <!-- /.content -->
    <!-- /.content -->
</div>

