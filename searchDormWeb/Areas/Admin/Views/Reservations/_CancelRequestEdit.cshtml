        <!--------------------------
        | Your Page Content Here |
        -------------------------->

        <div class="col-md-12">
            <!-- Horizontal Form -->
            <div class="box box-solid">
                <div class="box-header"></div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <dau-label asp-for="Id"></dau-label>
                            <div class="col-sm-8">
                                <p>1</p>
                            </div>

                        </div>

                        <div class="form-group">
                           <dau-label asp-for="BookingNumber"></dau-label>
                            <div class="col-sm-8">
                                <a>123234342</a>
                            </div>

                        </div>

                        <div class="form-group">
                            <dau-label asp-for="Customer"></dau-label>
                            <div class="col-sm-8">
                                <a>msjahun@live.com</a>
                            </div>

                        </div>


                        <div class="form-group">
                            <dau-label asp-for="Room"></dau-label>
                            <div class="col-sm-8">
                                <a>Alfam B block</a>
                            </div>

                        </div>


                        <div class="form-group">
                            
                            <dau-label asp-for="ReturnRequestStatus"></dau-label>
                            <dau-select asp-for="ReturnRequestStatus" ></dau-select>
                            <span asp-validation-for="ReturnRequestStatus"></span>

                        </div>


                        <div class="form-group">
                            
                            <dau-label asp-for="ReasonForCancellation"></dau-label>
                            <dau-input asp-for="ReasonForCancellation" type="text"></dau-input>
                            <span asp-validation-for="ReasonForCancellation"></span>
                        </div>


                        <div class="form-group">
                            
                            <dau-label asp-for="RequestedAction"></dau-label>
                            <dau-input asp-for="RequestedAction" type="text"></dau-input>
                            <span asp-validation-for="RequestedAction"></span>
                        </div>



                        <div class="form-group">
                            
                            <dau-label asp-for="CustomerComment"></dau-label>
                            <dau-textarea asp-for="CustomerComment" ></dau-textarea>
                            <span asp-validation-for="CustomerComment"></span>

                        </div>

                        <div class="form-group">
                            
                            <dau-label asp-for="StaffNotes"></dau-label>
                            <dau-textarea asp-for="StaffNotes" ></dau-textarea>
                            <span asp-validation-for="StaffNotes"></span>
                        </div>


                        <div class="form-group">
                            <dau-label asp-for="Date"></dau-label>
                            <div class="col-sm-8">
                                <p>9/2/2018 2:10:53 PM</p>
                            </div>

                        </div>


                    </div>
                    <!-- /.box-body -->

                </form>
            </div>


